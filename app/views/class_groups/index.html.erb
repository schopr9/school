<p id="notice"><%= notice %></p>

<h1>Listing Class Groups</h1>

<table>
  <thead>
    <tr>
      <th>Class name</th>
      <th>Year</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @class_groups.each do |class_group| %>
      <tr>
        <td><%= class_group.class_name %></td>
        <td><%= class_group.year %></td>
        <td><%= class_group.student_id %></td>
        <td><%= link_to 'Show', class_group %></td>
        <td><%= link_to 'Edit', edit_class_group_path(class_group) %></td>
        <td><%= link_to 'Destroy', class_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

