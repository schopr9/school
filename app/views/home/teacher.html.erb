<h1>Listing Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>  </th>
      <th>About me</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= image_tag teacher.image_url(:thumb) %></td>
        <td>  </td>
        <td><%= simple_format(teacher.about_me) %></td>
      </tr>
      
    <% end %>
  </tbody>
</table>

<br>
